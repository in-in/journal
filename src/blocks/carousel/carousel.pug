block append templates
  template#carousel
    section.carousel(aria-label='Most Read Posts')
      button(
          type='button',
          @click.prevent='prev',
          title='Previous slide'
        ).carousel__controls.carousel__controls--prev
        i.carousel__controls-wrap
          app-icon(
            :name='"arrow"', 
            :width='12', 
            :height='20',
            aria-hidden='true'
            ).carousel__icon.carousel__icon--prev
      slot
      button(
          type='button',
          @click.prevent='next',
          title='Next slide'
        ).carousel__controls.carousel__controls--next
        i.carousel__controls-wrap
          app-icon(
            :name='"arrow"', 
            :width='12',
            :height='20',
            aria-hidden='true'
            ).carousel__icon.carousel__icon--next
