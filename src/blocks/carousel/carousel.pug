block append templates
  template#carousel
    section.carousel(aria-label='Most Read Posts')
      button(
          type='button',
          @click.prevent='prev',
          aria-hidden='true'
        ).carousel__controls.carousel__controls--prev
        i.carousel__controls-wrap
          app-icon(:name='"arrow"', :width='12', height='20').carousel__icon.carousel__icon--prev
      slot
      button(
          type='button',
          @click.prevent='next',
          aria-hidden='true'
        ).carousel__controls.carousel__controls--next
        i.carousel__controls-wrap
          app-icon(:name='"arrow"', :width='12', height='20').carousel__icon.carousel__icon--next
