include ../container/container
include ../app-icon/app-icon
include ../menu-toggle/menu-toggle
include ../menu/menu

mixin header()
  header.header&attributes(attributes)
    +container()
      .header__wrap
        a(href='index.html', tabindex='0', aria-label='Journal').header__logo
          app-icon(:name='"logo"', :width='170.19516', height='25.436251').logo
        .header__menu-toggle
          menu-toggle(button-text='Menu', :class='{"menu-toggle--close": menuShow }')
        .header__menu
          main-menu(v-show='windowWidth > 800 || menuShow')
