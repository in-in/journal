include ../app-icon/app-icon

block append templates
  template#app-contact
    .app-contact(v-if='type === "place"') {{ type }}
      app-icon(:name='type', :width='2', :height='5')
    .app-contact(v-else-if='type === "phone"') {{ type }}
      app-icon(:name='type')
    .app-contact(v-else-if='type === "email"') {{ type }}
      app-icon(:name='type')
      
